<div class='row'>

  <h1 class='main-blog-title'><strong><i>Categories</i></strong></h1>
  <% @tags.each do |tag| %>
    <div class='large-4 columns end'>
      <%= link_to tag_path(tag) do  %>
        <div class='callout tag-callout' style="background-image: url(<%= Tag.find_by(name: tag).blog.photo.present? ? Tag.find_by(name: tag).blog.photo.url(:large) : @logo_photo %>)">
          <div class="tag-over-lay">
            <h4><%= tag.titleize %></h4>
            
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

</div>
<br><br><br>
